<div class="col-md-4 mx-auto">
	<div class="card card-body">
		<form action="/books/add" method="POST">
			<div class="form-group mb-3">
				<fieldset>
					<input type="text" class="form-control" name="title" id="title"  placeholder="Book Title" autofocus required>
				</fieldset>
			</div>
			<div class="form-group mb-3">
				<input type="text" name="author" id="author" class="form-control" placeholder="Author" required>
			</div>
			<div class="form-group mb-3">
				<input type="text" name="isbn" pattern="?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx]
" id="isbn" class="form-control" placeholder="ISBN" required>
			</div>
			<button class="btn btn-primary btn-block">
				Save
			</button>
		</form>
	</div>
</div>
